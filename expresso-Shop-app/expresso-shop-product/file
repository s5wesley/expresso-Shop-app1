---
# Source: expresso-shop-product/templates/pdb.yaml
apiVersion: policy/v1beta1
kind: PodDisruptionBudget
metadata:
  name: expresso-shop-product
spec:
  minAvailable: 2 # Minimum number of pods that must be available
  selector:
    matchLabels:
      app: expresso-shop-product  # Label selector that matches the pods to be protected
      version: v1
---
# Source: expresso-shop-product/templates/serviceaccount.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: expresso-shop-product
  labels:
    app: expresso-shop-product
    version: v1
---
# Source: expresso-shop-product/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: expresso-shop-product
  labels:
     app: expresso-shop-product
     version: v1
spec:
  type: NodePort
  ports:
    - port: 8091
      targetPort: 80
      protocol: TCP
      name: http
  selector:
   app: expresso-shop-product
   version: v1
---
# Source: expresso-shop-product/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: expresso-shop-product
  labels:
    app: expresso-shop-product
    version: v1
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 2
      maxSurge: 2
  selector:
    matchLabels:
      app: expresso-shop-product
      version: v1
  template:
    metadata:
      labels:
        app: expresso-shop-product
        version: v1
    spec:
      serviceAccountName: expresso-shop-product
      securityContext:
        {}
      containers:
        - name: expresso-shop-product
          securityContext:
            {}
          image: "devopseasylearning2021/s3-project01-espresso-shop-product:v1.0.0"
          imagePullPolicy: 
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          # livenessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          # readinessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          resources:
            limits:
              cpu: 100m
              memory: 128Mi
            requests:
              cpu: 100m
              memory: 128Mi
---
# Source: expresso-shop-product/templates/hpa.yaml
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: expresso-shop-product
  labels:
     app: expresso-shop-product
     version: v1
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: expresso-shop-product
  minReplicas: 1
  maxReplicas: 4
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 80
