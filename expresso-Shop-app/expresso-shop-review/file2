# Source: expresso-shop-review/templates/tests/test-connection.yaml
apiVersion: v1
kind: Pod
metadata:
  name: "release-name-expresso-shop-review-test-connection"
  labels:
    helm.sh/chart: expresso-shop-review-0.1.0
    app.kubernetes.io/name: expresso-shop-review
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['release-name-expresso-shop-review:8092']
  restartPolicy: Never
