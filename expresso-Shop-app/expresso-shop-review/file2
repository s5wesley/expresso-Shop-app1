# Source: expresso-shop-review/templates/pdb.yaml
apiVersion: policy/v1beta1
kind: PodDisruptionBudget
metadata:
  name: expresso-shop-review-v1
spec:
  minAvailable: 2 # Minimum number of pods that must be available
  selector:
    matchLabels:
       app: expresso-shop-review-v1
       version: v1  # Label selector that matches the pods to be protected
---
