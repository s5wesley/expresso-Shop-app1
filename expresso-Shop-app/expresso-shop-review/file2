# Source: expresso-shop-review/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: expresso-shop-review
  labels:
      app: expresso-shop-review-v1
      version: v1
      app: expresso-shop-review-v2
      version: v2
spec:
  type: NodePort
  ports:
    - port: 8092
      targetPort: 80
      protocol: TCP
      name: http
  selector:
     app: expresso-shop-review-v1
     version: v1
     app: expresso-shop-review-v2
     version: v2
---
# Source: expresso-shop-review/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: expresso-shop-review-v1
  labels:
    app: expresso-shop-review-v1
    version: v1
spec:
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 2
      maxSurge: 2
  selector:
    matchLabels:
      app: expresso-shop-review-v1
      version: v1
  template:
    metadata:
      labels:
        app: expresso-shop-review-v1
        version: v1
    spec:
      serviceAccountName: expresso-shop-review
      securityContext:
        {}
      containers:
        - name: expresso-shop-review
          securityContext:
            {}
          image: "devopseasylearning2021/s3-project01-espresso-shop-review:v1.0.0"
          env:
            - name: SERVICE_VERSION
              value: v1
          imagePullPolicy: 
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          # livenessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          # readinessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          resources:
            limits:
              cpu: 100m
              memory: 128Mi
            requests:
              cpu: 100m
              memory: 128Mi
---
